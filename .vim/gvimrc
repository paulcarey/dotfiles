"
set guioptions-=T
" set guifont=Monaco:h12
set guifont=Source\ Code\ Pro\ Light:h10
" set guifont=Source\ Code\ Pro\ Regular:h12
" set guifont=Inconsolata:h15
" set guifont=Terminus:h16
set lines=35
set columns=90

" Copy register into system buffer, use console dialogs, disable scrollbar
set guioptions=aAce

" Precede the tab name with its number
set guitablabel=%N\ %t

" Set transparency (possibly experimental renderer is required)
" Disabled by default for git editor - use vim instead of mvim...
" set transp=45

" set relativenumber
set number
set scrolloff=3
set cursorline

" Autosave when MacVim loses focus
au FocusLost * silent! wa

nnoremap <D-1> 1gt<CR>
nnoremap <D-2> 2gt<CR>
nnoremap <D-3> 3gt<CR>
nnoremap <D-4> 4gt<CR>
nnoremap <D-5> 5gt<CR>
nnoremap <D-6> 6gt<CR>
nnoremap <D-7> 7gt<CR>
nnoremap <D-8> 8gt<CR>
nnoremap <D-9> 9gt<CR>
nnoremap <D-0> :tablast<CR>

